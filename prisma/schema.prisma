// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique

  username String @unique
  name     String
  level    Level  @default(GURU)

  Session Session[]
  Key     Key[]

  @@map("user")
}

enum Level {
  ADMIN
  GURU
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("session")
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  primary         Boolean
  expires         String?
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("key")
}

model Students {
  id    Int    @id @default(autoincrement())
  name  String
  nis   Int    @unique
  class String

  @@map("students")
}

model Classes {
  id   Int    @id @default(autoincrement())
  name String

  @@map("classes")
}

model Courses {
  id          Int    @id @default(autoincrement())
  urlID       String
  name        String
  className   String
  teacherName String
  kkm         Int

  @@map("courses")
}

model CourseWork {
  id          Int    @id @default(autoincrement())
  name        String
  studentName String
  studentNis  String
  grade       Int

  @@map("coursework")
}
