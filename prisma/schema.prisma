// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique

  username String @unique
  name     String
  class    String?
  level    Level  @default(GURU)

  Session Session[]
  Key     Key[]

  @@map("user")
}

enum Level {
  ADMIN
  GURU
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("session")
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  primary         Boolean
  expires         String?
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("key")
}

model Courses {
  id          Int    @id @default(autoincrement())
  urlID       String @unique
  class       String
  subject     String
  teacherName String
  teacherId   String
  kkm         String

  @@map("courses")
}

model Assignments {
  id Int @id @default(autoincrement())
  name String
  urlID String

  @@map("assignments")
}

model Grades {
  id Int @id @default(autoincrement())
  urlID String
  assignmentID Int
  score Int

  @@map("grades")
}

model Students {
  id          Int    @id @default(autoincrement())
  name        String
  urlID       String
  studentName String
  studentNis  String

  @@map("coursework")
}
